{
  "kind": "singleType",
  "collectionName": "site_settings",
  "info": {
    "singularName": "site-setting",
    "pluralName": "site-settings",
    "displayName": "Site settings",
    "description": "Global header, footer, and brand assets"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "default": "Site settings"
    },
    "header": {
      "type": "component",
      "repeatable": false,
      "component": "site.header"
    },
    "footer": {
      "type": "component",
      "repeatable": false,
      "component": "site.footer"
    },
    "brandAssets": {
      "type": "component",
      "repeatable": false,
      "component": "site.brand-assets"
    },
    "defaultSeo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
